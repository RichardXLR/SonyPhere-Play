<!-- Removido o tema duplicado -->

<resources>
    <!-- Tema para SplashActivity - tela limpa sem barras -->
    <style name="Theme.SplashScreen" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <!-- CORREÇÃO: Remover completamente title e action bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Tema para MainActivity - sem barras e fundo escuro -->
    <style name="Theme.MainActivity" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- CORREÇÃO: Garantir que não apareça nenhuma barra de título -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources> 